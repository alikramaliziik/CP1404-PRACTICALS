BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.33
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate(self.text)
            size_hint_x: 0.75
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 48
                background_color: (0.5, 0.5, 0.5, 1)
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 48
                background_color: (0.5, 0.5, 0.5, 1)
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        font_size: 48
        background_color: (0.5, 0.5, 0.5, 1)
        size_hint_y: 0.33
    Label:
        id: output_label
        text: app.output_text
        font_size: 48
        color: (1, 1, 0, 1)
        size_hint_y: 0.34
